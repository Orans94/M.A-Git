<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="63.0" prefWidth="1275.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.top.TopController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Start">
            <items>
              <MenuItem fx:id="createNewRepository" mnemonicParsing="false" onAction="#createNewRepositoryAction" text="Create new repository" />
                  <MenuItem fx:id="loadRepositoryByPath" mnemonicParsing="false" text="Load repository by path" />
                  <MenuItem fx:id="loadRepositoryFromXML" mnemonicParsing="false" text="Load repository by XML file" />
                  <MenuItem fx:id="cloneRepository" mnemonicParsing="false" text="Clone repository" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
               <items>
                  <RadioMenuItem fx:id="changeThemeToLight" mnemonicParsing="false" selected="true" text="Light theme">
                     <toggleGroup>
                        <ToggleGroup fx:id="themes" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="changeThemeToDark" mnemonicParsing="false" text="Dark theme" toggleGroup="$themes" />
                  <RadioMenuItem fx:id="changeThemeToStadium" mnemonicParsing="false" text="Stadium theme" toggleGroup="$themes" />
                  <RadioMenuItem fx:id="setBackgroundImage" mnemonicParsing="false" text="Choose backgroud photo" toggleGroup="$themes" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="Commands">
            <items>
              <MenuItem fx:id="commit" mnemonicParsing="false" text="Commit" />
                  <MenuItem fx:id="pull" mnemonicParsing="false" text="Pull / Fetch" />
                  <MenuItem fx:id="push" mnemonicParsing="false" text="Push" />
                  <MenuItem fx:id="createNewBranch" mnemonicParsing="false" text="Create new branch" />
                  <MenuItem fx:id="deleteBranch" mnemonicParsing="false" text="Delete Branch" />
                  <MenuItem fx:id="checkout" mnemonicParsing="false" text="Checkout" />
                  <MenuItem fx:id="merge" mnemonicParsing="false" text="Merge" />
                  <MenuItem fx:id="resetBranch" mnemonicParsing="false" text="Reset branch" />
                  <MenuItem fx:id="showAllBranches" mnemonicParsing="false" text="Show all branches" />
                  <MenuItem fx:id="showCurrentBranchHistory" mnemonicParsing="false" text="Show commit history of current branch" />
                  <MenuItem fx:id="showStatus" mnemonicParsing="false" text="Show status" />
                  <MenuItem fx:id="showCurrentCommitDetails" mnemonicParsing="false" text="Show details of current commit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem fx:id="contactUs" mnemonicParsing="false" text="Contact us" />
                  <MenuItem fx:id="about" mnemonicParsing="false" text="About" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <HBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="25.0" prefWidth="904.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="refresh" mnemonicParsing="false" text="Refresh" HBox.hgrow="NEVER" />
            <SplitMenuButton maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="347.0" text="RepositoryFullPath" HBox.hgrow="ALWAYS">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </SplitMenuButton>
            <SplitMenuButton mnemonicParsing="false" prefHeight="25.0" prefWidth="132.0" text="Checkout (Active)" HBox.hgrow="NEVER">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </SplitMenuButton>
            <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="116.0" text="Push" HBox.hgrow="NEVER" />
            <Button mnemonicParsing="false" prefHeight="23.0" prefWidth="104.0" text="Pull" HBox.hgrow="NEVER" />
            <Button mnemonicParsing="false" text="Commit(diff)" HBox.hgrow="NEVER" />
            <Button mnemonicParsing="false" text="Show status" HBox.hgrow="NEVER" />
            <Button mnemonicParsing="false" text="Create Branch" HBox.hgrow="NEVER" />
            <Button mnemonicParsing="false" text="Delete Branch" HBox.hgrow="NEVER" />
         </children>
      </HBox>
   </children>
</VBox>
